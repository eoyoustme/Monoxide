-- Gọi Spawner
local Spawner = loadstring(game:HttpGet('https://raw.githubusercontent.com/MuhXd/DoorSuff/main/OtherSuff/DoorEntitySpawn%2BSource'))()

-- Tạo entity G-95
local entity = Spawner.createEntity({
    CustomName = "G-95",
    Model = "rbxassetid://78561638840681",
    Speed = 525,
    DelayTime = 9,
    HeightOffset = 0.1,
    CanKill = true, -- để true hoặc false đều được
    NoDieOnCrouching = false,
    NoHiding = false,
    AntiCrucifix = false,
    KillRange = 40,
    OneRoom = false,
    DieOnLook = false,
    BreakLights = true,
    BackwardsMovement = false,
    MovementDeath = { false, '1' },
    FlickerLights = { true, 4 },
    Cycles = { Min = 13, Max = 13, WaitTime = 0.7 },
    CamShake = {
        true,
        {3.5, 20, 0.1, 1},
        100,
    },
    Jumpscare = {
        false,
        {
            Type = "1",
            Image1 = "rbxassetid://74330632949039",
            Image2 = "rbxassetid://74330632949039",
            Shake = true,
            Sound1 = { "0", { Volume = 0 } },
            Sound2 = { "5263560566", { Volume = 3 } },
            Flashing = { true, Color3.fromRGB(0, 0, 255) },
            Tease = { false, Min = 1, Max = 1 },
        },
    },
    Color = 'GuidingLight',
    DiffrentMessages = false,
    CustomDialog = {  
        {"Claim has seen you.", "It will consume anyone on sight.", "It takes a bit to fully spawn in", "so you can use that to your advantage."},
        {"Stop Dieing"},
        {"Bruh", "Use what you have learned from Rush!"},
        {"It seems like Template is causing quite the ruckus...", "Hide in a closet or bed as quickly as possible!"},
        {"I have told You What to do", "YOU JUST HAVE A SKILL ISSUE"}
    }
})

-- Debug functions (giữ nguyên hoặc sửa tùy ý)
entity.Debug.OnEntitySpawned = function()
    print("Entity has spawned.")
    local lighting = game.Lighting
    local tween = game:GetService("TweenService")
    lighting.MainColorCorrection.TintColor = Color3.fromRGB(255, 255, 255)
    lighting.MainColorCorrection.Contrast = 10
    tween:Create(lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
    tween:Create(lighting.MainColorCorrection, TweenInfo.new(5), {TintColor = Color3.fromRGB(250, 0, 0)}):Play()
end

entity.Debug.OnEntityDespawned = function()
    print("Entity has despawned.")
    local lighting = game.Lighting
    local tween = game:GetService("TweenService")
    task.wait(3)
    lighting.MainColorCorrection.TintColor = Color3.fromRGB(250, 0, 0)
    lighting.MainColorCorrection.Contrast = 10
    tween:Create(lighting.MainColorCorrection, TweenInfo.new(2.5), {Contrast = 0}):Play()
    tween:Create(lighting.MainColorCorrection, TweenInfo.new(5), {TintColor = Color3.fromRGB(255, 255, 255)}):Play()

    -- Achievement (nếu muốn)
    local achievementGiver = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Custom%20Achievements/Source.lua"))()
    achievementGiver({
        Title = "",
        Desc = "",
        Reason = "",
        Image = "rbxassetid://"
    })
end

entity.Debug.OnDeath = function()
    warn("Player has died.")
    -- Các logic death hint nếu cần
end

-- Chạy entity
Spawner.runEntity(entity)

-- Jumpscare logic khóa camera, hiện ảnh và kill player thủ công

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local camera = workspace.CurrentCamera
local player = Players.LocalPlayer
local entityPart = nil
local triggered = false

-- Tìm part chính của entity (ví dụ tên part là "Main")
task.spawn(function()
    while not entityPart do
        local g95Model = workspace:FindFirstChild("G-95")
        if g95Model and g95Model:FindFirstChild("Main") then
            entityPart = g95Model.Main
        elseif g95Model and g95Model:FindFirstChild("HumanoidRootPart") then
            entityPart = g95Model.HumanoidRootPart
        end
        task.wait(0.1)
    end
end)

RunService.Heartbeat:Connect(function()
    if triggered or not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") or not entityPart then return end

    local dist = (player.Character.HumanoidRootPart.Position - entityPart.Position).Magnitude
    local killRange = entity.Config.KillRange or 40

    if dist <= killRange then
        triggered = true

        -- Khóa camera vào entity
        camera.CameraType = Enum.CameraType.Scriptable
        local lookCF = CFrame.new(player.Character.Head.Position, entityPart.Position)
        camera.CFrame = lookCF
        TweenService:Create(camera, TweenInfo.new(0.75), {CFrame = lookCF}):Play()

        -- Đợi 1 giây
        task.wait(1)

        -- Hiện jumpscare
        local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
        gui.Name = "G95Jumpscare"

        local img = Instance.new("ImageLabel", gui)
        img.Size = UDim2.new(1, 0, 1, 0)
        img.Position = UDim2.new(0, 0, 0, 0)
        img.BackgroundTransparency = 1
        img.Image = "rbxassetid://14865476959" -- thay bằng id ảnh bạn muốn
        img.ImageTransparency = 1

        TweenService:Create(img, TweenInfo.new(0.25), {ImageTransparency = 0}):Play()

        -- Đợi 0.5 giây rồi kill player thủ công
        task.wait(0.5)
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.Health = 0
        end
    end
end)
