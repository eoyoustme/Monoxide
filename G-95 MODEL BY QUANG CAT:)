local Spawner = loadstring(game:HttpGet('https://raw.githubusercontent.com/MuhXd/DoorSuff/main/OtherSuff/DoorEntitySpawn%2BSource'))()

-- Tạo thực thể G-95
local entity = Spawner.createEntity({
    CustomName = "G-95",
    Model = "rbxassetid://83361722843174",
    Speed = 525,
    DelayTime = 9,
    HeightOffset = 0.1,
    CanKill = true,
    NoDieOnCrouching = false,
    NoHiding = false,
    AntiCrucifix = false,
    KillRange = 40,
    OneRoom = false,
    DieOnLook = false,
    BreakLights = true,
    BackwardsMovement = false,
    MovementDeath = {
        false,
        '1',
    },
    FlickerLights = {
        true,
        4
    },
    Cycles = {
        Min = 13,
        Max = 13,
        WaitTime = 0.7,
    },
    CamShake = {
        true,
        {3.5, 20, 0.1, 1},
        100,
    },
    Jumpscare = {
        true,
        {
            Type = "1",
            Image1 = "rbxassetid://74330632949039",
            Image2 = "rbxassetid://74330632949039",
            Shake = true,
            Sound1 = {
                "0",
                { Volume = 0 },
            },
            Sound2 = {
                "5263560566",
                { Volume = 3 },
            },
            Flashing = {
                true,
                Color3.fromRGB(0, 0, 255),
            },
            Tease = {
                false,
                Min = 1,
                Max = 1,
            },
        },
    },
    Color = 'GuidingLight',
    DiffrentMessages = false,
    CustomDialog = {  
        {"Claim has seen you.", "It will consume anyone on sight.", "It takes a bit to fully spawn in", "so you can use that to your advantage."},
        {"Stop Dieing"},
        {"Bruh", "Use what you have learned from Rush!"},
        {"It seems like Template is causing quite the ruckus...", "Hide in a closet or bed as quickly as possible!"},
        {"I have told You What to do", "YOU JUST HAVE A SKILL ISSUE"}
    }
})

-- Debug Events
entity.Debug.OnEntitySpawned = function()
    print("Entity has spawned.")
end

entity.Debug.OnEntityDespawned = function()
    print("Entity has despawned.")

    -- Achievement example
    local achievementGiver = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Custom%20Achievements/Source.lua"))()
    achievementGiver({
        Title = "",
        Desc = "",
        Reason = "",
        Image = "rbxassetid://"
    })
end

entity.Debug.OnDeath = function()
    warn("Player has died.")
    local func, setupval, getinfo, typeof, getgc, next = nil, debug.setupvalue or setupvalue, debug.getinfo or getinfo, typeof, getgc, next
    for i,v in next, getgc(false) do
        if typeof(v) == "function" then
            local info = getinfo(v)
            if info.currentline == 54 and info.nups == 2 and info.is_vararg == 0 then
                func = v
                break
            end
        end
    end
    local function DeathHint(hints, type)
        setupval(func, 1, hints)
        if type ~= nil then
            setupval(func, 2, type)
        end
    end

    DeathHint({
        "You died to who you call G-95",
        "This Entity is so fast! Try to hide quickly!",
        "It comes straight from hell to make you suffer.",
        "..Avoid eye contact at all cost."
    }, "Blue")
end

-- Chạy entity
Spawner.runEntity(entity)

-- ✅ Kết hợp logic JUMPSCARE khi người chơi trong phạm vi tấn công
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

local camera = workspace.CurrentCamera
local entityPart = nil
local entityMoving = true

-- Đợi entity spawn xong
task.spawn(function()
    while not entityPart do
        entityPart = workspace:FindFirstChild("G-95")
        task.wait(0.1)
    end
end)

-- Kiểm tra người chơi có trong phạm vi không
RunService.Heartbeat:Connect(function()
    local player = Players.LocalPlayer
    if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") or not entityPart then return end

    local dist = (player.Character.HumanoidRootPart.Position - entityPart.Position).Magnitude

    if dist <= entity.Config.KillRange and entityMoving then
        entityMoving = false

        -- Dừng chuyển động entity
        if entity._running then
            entity._running:Disconnect()
        end

        -- Khóa camera
        camera.CameraType = Enum.CameraType.Scriptable
        camera.CFrame = CFrame.new(player.Character.Head.Position, entityPart.Position)

        -- Tween chuyển nhẹ
        TweenService:Create(camera, TweenInfo.new(1), {
            CFrame = CFrame.new(player.Character.Head.Position, entityPart.Position)
        }):Play()

        -- Chờ 2 giây
        task.wait(2)

        -- Hiện jumpscare
        local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
        gui.Name = "JumpscareGUI"
        local img = Instance.new("ImageLabel", gui)
        img.Size = UDim2.new(1, 0, 1, 0)
        img.Position = UDim2.new(0, 0, 0, 0)
        img.Image = "rbxassetid://14865476959"
        img.BackgroundTransparency = 1
        img.ImageTransparency = 1

        TweenService:Create(img, TweenInfo.new(0.5), {ImageTransparency = 0}):Play()

        -- Phát âm thanh
        local sound = Instance.new("Sound", workspace)
        sound.SoundId = "rbxassetid://6567183465"
        sound.Volume = 3
        sound:Play()

        -- Sau 1.5s thì giết người chơi
        task.wait(2.5)
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.Health = 0
        end
    end
end)
